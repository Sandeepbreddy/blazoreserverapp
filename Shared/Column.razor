@if (Item == null)
{
    <th>@Label</th>

}
else
{
    var property = typeof(SurveyDetails).GetProperty(Name);
    <td>@property.GetValue(Item).ToString()</td>
}
@code {
    [Parameter]
    public string Name { get; set; }

    [Parameter]
    public string Label { get; set; }

    [CascadingParameter]
    public SurveyDetails Item { get; set; }
}